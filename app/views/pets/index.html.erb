<div class="container">
  <h1 class="my-3">Lost pets in Meguro 🐶</h1>
  <div class="row">
    <% @pets.each do |pet| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card mb-3 shadow">
          <div class="card-body">
            <h5 class="card-title"><%= pet.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= pet.species.capitalize %></h6>
            <p class="card-text">📍 <%= pet.address %></p>
            <p class="card-text"><%= pet.found_days_ago %></p>
            <%= link_to 'Details', pet_path(pet), class: "card-link" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>